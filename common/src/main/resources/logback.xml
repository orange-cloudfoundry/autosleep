<configuration debug="true" packagingData="true">
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <Target>System.out</Target>
        <encoder>
            <pattern>%-5level - %thread - %logger{5}\(%line\) - %message%n %rEx{full}</pattern>
        </encoder>
    </appender>
    <logger name="org.cloudfoundry.autosleep">
        <if condition='property("autosleep.debug").contains("autosleep")'>
            <then>
                <level value="DEBUG"/>
            </then>
            <else>
                <level value="INFO"/>
            </else>
        </if>
    </logger>
    <logger name="org.springframework">
        <if condition='property("autosleep.debug").contains("spring")'>
            <then>
                <level value="DEBUG"/>
            </then>
            <else>
                <level value="WARN"/>
            </else>
        </if>
    </logger>
    <root>
        <appender-ref ref="stdout"/>
        <!--<level value="OFF" />-->
        <level value="WARN"/>
    </root>
</configuration>
